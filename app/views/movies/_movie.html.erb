<div id="<%= dom_id movie %>">
  <p>
    <strong>Titulo:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Sinopse:</strong>
    <%= movie.synopsis %>
  </p>

  <p>
    <strong>Ano de lançamento:</strong>
    <%= movie.release_year %>
  </p>

  <p>
    <strong>Duração:</strong>
    <%= movie.duration %>
  </p>

  <p>
    <strong>Diretor:</strong>
    <%= movie.director %>
  </p>

  <p>
    <strong>User:</strong>
    <%= movie.user_id %>
  </p>

</div>
